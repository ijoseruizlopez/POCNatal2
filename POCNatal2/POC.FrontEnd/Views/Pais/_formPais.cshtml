<span slot="title">Pais</span>
<div slot="body">
    <form id="modalForm" v-validation v-on:submit.prevent="formSubmit">
        <div class="form-group">
            <label for="">Nombre</label>
            <input type="text"
                   class="form-control"
                   name="name"
                   v-model="modal.Nombre"
                   data-fv-notempty="true"
                   data-fv-notempty-message="Debe ingresar el campo 'Nombre'" />
        </div>
    </form>
</div>
<div slot="footer">
    <button type="button" v-on:click="formSubmit()" class="btn btn-primary">Guardar</button>
    <button type="button" class="btn btn-link" data-dismiss="modal">Cancelar</button>
</div>